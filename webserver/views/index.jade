extends layout

block content
	h1(id='h1Text') Flash Cards
	button(id='log') Login
	button(id='logGmail') Login with Gmail
	button(id='sign') Signup

	script(src='/scripts/addMultipleListeners.js')
	script.
		var buttonId=[
		'log',
		'logGmail',
		'sign'
		];  // default button ids
		var buttonHref=[
			'home',
			'home',
			'signup'
		];  // default button location href
		
		addMultipleListeners(
			'click',
			buttonId,
			buttonHref,
			function(href) { location.href=href }
		);
